{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "preserve",
    "baseUrl": "./",
    "paths": {
      "@shared/*": [
        "src/app/shared/*"
      ],
      "@features/*": [
        "src/app/features/*"
      ],
      "@lib/*": [
        "src/app/lib/*"
      ],
      "@spartan-ng/helm/button": [
        "./libs/ui/ui-button-helm/src/index.ts"
      ],
      "@spartan-ng/helm/utils": [
        "./libs/ui/ui-utils-helm/src/index.ts"
      ],
      "@spartan-ng/helm/icon": [
        "./libs/ui/ui-icon-helm/src/index.ts"
      ],
      "@spartan-ng/helm/skeleton": [
        "./libs/ui/ui-skeleton-helm/src/index.ts"
      ],
      "@spartan-ng/helm/menu": [
        "./libs/ui/ui-menu-helm/src/index.ts"
      ],
      "@spartan-ng/helm/form-field": [
        "./libs/ui/ui-form-field-helm/src/index.ts"
      ],
      "@spartan-ng/helm/input": [
        "./libs/ui/ui-input-helm/src/index.ts"
      ],
      "@spartan-ng/helm/label": [
        "./libs/ui/ui-label-helm/src/index.ts"
      ],
      "@spartan-ng/helm/breadcrumb": [
        "./libs/ui/ui-breadcrumb-helm/src/index.ts"
      ],
      "@spartan-ng/helm/date-picker": [
        "./libs/ui/ui-date-picker-helm/src/index.ts"
      ],
      "@spartan-ng/helm/calendar": [
        "./libs/ui/ui-calendar-helm/src/index.ts"
      ],
      "@spartan-ng/helm/popover": [
        "./libs/ui/ui-popover-helm/src/index.ts"
      ],
      "@spartan-ng/helm/select": [
        "./libs/ui/ui-select-helm/src/index.ts"
      ],
      "@spartan-ng/helm/badge": [
        "./libs/ui/ui-badge-helm/src/index.ts"
      ],
      "@spartan-ng/helm/sonner": [
        "./libs/ui/ui-sonner-helm/src/index.ts"
      ],
      "@spartan-ng/helm/dialog": [
        "./libs/ui/ui-dialog-helm/src/index.ts"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true
  },
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ]
}
